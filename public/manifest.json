{
  "manifest_version": 3,
  "name": "LinkedIn Connections Dashboard",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["*://www.linkedin.com/*"]
}
